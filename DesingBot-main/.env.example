# Archivo de configuración de ejemplo para DesignBot
# Copia este archivo como .env y completa tus API keys

# Token del bot de Telegram (obtenido de @BotFather)
TOKEN=tu_token_de_telegram_aqui

# API Key de Fireworks AI (para embeddings y respuestas)
FIRE=tu_api_key_de_fireworks_aqui

# Configuraciones opcionales del bot
BOT_NAME=DesignBot
BOT_VERSION=1.0.0

# Configuraciones de logging
LOG_LEVEL=INFO
DEBUG_MODE=False

# Configuraciones de embeddings
EMBEDDING_MODEL=nomic-ai/nomic-embed-text-v1.5
LLM_MODEL=accounts/fireworks/models/llama-v3p3-70b-instruct

# Límites de procesamiento
MAX_CHUNKS_PER_SEARCH=5
MAX_RESPONSE_LENGTH=4000